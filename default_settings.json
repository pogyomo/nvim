{
  "tree-sitter.uses": [
    "c",
    "c_sharp",
    "ca65",
    "cpp",
    "css",
    "go",
    "gomod",
    "html",
    "java",
    "javascript",
    "json",
    "ld65",
    "lua",
    "markdown",
    "php",
    "phpdoc",
    "query",
    "rust",
    "sql",
    "toml",
    "typescript",
    "vimdoc",
    "zig"
  ],
  "tree-sitter.indent": {
    "exclude": ["php"]
  },
  "lsp.providers": {
    "clangd": {},
    "cmake": {},
    "cssls": {},
    "html": {},
    "ts_ls": {},
    "jsonls": {},
    "intelephense": {},
    "rust_analyzer": {
      "config": {
        "settings": {
          "rust-analyzer": {
            "check": {
              "command": "clippy"
            }
          }
        }
      }
    },
    "lua_ls": {
      "config": {
        "settings": {
          "Lua": {
            "workspace": {
              "checkThirdParty": false
            },
            "runtime": {
              "version": "LuaJIT"
            }
          }
        }
      }
    },
    "gopls": {},
    "tailwindcss": {}
  },
  "formatter.providers": {
    "clang-format": {},
    "prettier": {
      "config": {
        "append_args": ["--ignore-path", ".prettierignore"]
      }
    },
    "rustfmt": {
      "ensure_installed": false
    },
    "stylua": {},
    "gofmt": {
      "ensure_installed": false
    }
  },
  "[c,cpp]": {
    "formatter.uses": ["clang-format"],
    "lsp.uses": ["clangd"]
  },
  "[cmake]": {
    "lsp.uses": ["cmake"]
  },
  "[css]": {
    "formatter.uses": ["prettier"],
    "lsp.uses": ["cssls"]
  },
  "[html]": {
    "formatter.uses": ["prettier"],
    "lsp.uses": ["html"]
  },
  "[javascript,typescript,javascriptreact,typescriptreact]": {
    "formatter.uses": ["prettier"],
    "lsp.uses": ["ts_ls"]
  },
  "[json]": {
    "formatter.uses": ["prettier"],
    "lsp.uses": ["jsonls"]
  },
  "[php]": {
    "formatter.use_lsp_format": false,
    "lsp.uses": ["intelephense", "tailwindcss"]
  },
  "[rust]": {
    "formatter.uses": ["rustfmt"],
    "lsp.uses": ["rust_analyzer"]
  },
  "[lua]": {
    "formatter.uses": ["stylua"],
    "lsp.uses": ["lua_ls"]
  },
  "[go]": {
    "formatter.uses": ["gofmt"],
    "lsp.uses": ["gopls"]
  }
}
