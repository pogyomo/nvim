{
  "[c,cpp]": {
    "fmt": {
      "provider": "clang-format"
    },
    "lsp": {
      "provider": "clangd"
    }
  },
  "[cmake]": {
    "lsp": {
      "provider": "cmake"
    }
  },
  "[css]": {
    "fmt": {
      "provider": "prettier"
    },
    "lsp": {
      "provider": "cssls"
    }
  },
  "[html]": {
    "fmt": {
      "provider": "prettier"
    },
    "lsp": {
      "provider": "html"
    }
  },
  "[javascript,typescript]": {
    "fmt": {
      "provider": "prettier"
    },
    "lsp": {
      "provider": "ts_ls"
    }
  },
  "[json]": {
    "fmt": {
      "provider": "prettier"
    },
    "lsp": {
      "provider": "jsonls"
    }
  },
  "[php]": {
    "fmt": {
      "use_lsp_format": true
    },
    "lsp": {
      "provider": "intelephense"
    }
  },
  "[rust]": {
    "fmt": {
      "provider": "rustfmt",
      "ensure_installed": false
    },
    "lsp": {
      "provider": "rust_analyzer",
      "config": {
        "settings": {
          "rust-analyzer": {
            "check": {
              "command": "clippy"
            }
          }
        }
      }
    }
  },
  "[lua]": {
    "fmt": {
      "provider": "stylua"
    },
    "lsp": {
      "provider": "lua_ls",
      "config": {
        "settings": {
          "Lua": {
            "workspace": {
              "checkThirdParty": false
            },
            "runtime": {
              "version": "LuaJIT"
            }
          }
        }
      }
    }
  }
}
